<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileBooking.Views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="FakeBooking" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="BackToSelectButton" Text="Back" IsVisible="False" Clicked="BackToSelectButton_Clicked" />
            <Button x:Name="SelectLoginButton" Text="Login" Clicked="SelectLoginButton_Clicked" />
            <Button x:Name="SelectRegisterButton" Text="Register" Clicked="SelectRegisterButton_Clicked"/>
            <Entry x:Name="UsernameEntry" IsVisible="False" Placeholder="username"/>
            <Entry x:Name="PasswordEntry" IsVisible="False" Placeholder="password"/>
            <Entry x:Name="PasswordAgainEntry" IsVisible="False" Placeholder="password again"/>
            <Button x:Name="LoginButton" Text="Login" IsVisible="False" Clicked="LoginButton_Clicked"/>
            <Button x:Name="RegisterButton" Text="Register" IsVisible="False" Clicked="RegisterButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>